  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "max_width",
      "label": "Section Max width (e.g., 1989px or 90%)",
      "default": "1989px"
    },
    {
      "type": "inline_richtext",
      "id": "title",
