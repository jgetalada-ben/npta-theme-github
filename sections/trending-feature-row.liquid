{% comment %}
  Trending Feature Row
  - Up to 4 cards
  - Each card: image, eyebrow (NOW TRENDING), title, button
{% endcomment %}

<section class="trending-row-section">
  <div class="trending-row page-width">
    <div class="trending-row__grid">
      {% for block in section.blocks %}
        <article class="trending-card" {{ block.shopify_attributes }}>
          {% if block.settings.image %}
            <div class="trending-card__image-wrap">
              {{ block.settings.image
                | image_url: width: 1200
                | image_tag:
                  class: 'trending-card__image',
                  loading: 'lazy',
                  alt: block.settings.image.alt | escape
              }}
            </div>
          {% endif %}

          <div class="trending-card__content">
            {% if block.settings.eyebrow %}
              <p class="trending-card__eyebrow">
                {{ block.settings.eyebrow }}
              </p>
            {% endif %}

            {% if block.settings.heading %}
              <h3 class="trending-card__heading">
                {{ block.settings.heading }}
              </h3>
            {% endif %}

            {% if block.settings.button_label and block.settings.button_link != blank %}
              <a
                href="{{ block.settings.button_link }}"
                class="trending-card__button"
                {% if block.settings.button_new_tab %}
                  target="_blank" rel="noopener noreferrer"
                {% endif %}
              >
                {{ block.settings.button_label }}
              </a>
            {% endif %}
          </div>
        </article>
      {% endfor %}
    </div>
  </div>

  <style>
    .trending-row-section {
      background: #f7f7f7;
      padding: 64px 0 72px;
    }

    .trending-row.page-width {
      max-width: 1240px; /* keeps everything narrower like the design */
      margin: 0 auto;
    }

    .trending-row__grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 32px;
    }

    @media screen and (max-width: 900px) {
      .trending-row__grid {
        grid-template-columns: 1fr;
        gap: 24px;
      }
    }

    .trending-card {
      background: #ffffff;
      border-radius: 18px;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      box-shadow: 0 18px 40px rgba(15, 15, 15, 0.09);
    }

    /* image */
    .trending-card__image-wrap {
      width: 100%;
      aspect-ratio: 16 / 9; /* slightly shorter image like the comp */
      overflow: hidden;
    }

    .trending-card__image {
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
      object-position: center;
    }

    /* content */
    .trending-card__content {
      padding: 26px 40px 32px;
      text-align: center;
    }

    @media screen and (max-width: 768px) {
      .trending-card__content {
        padding: 22px 22px 26px;
      }
    }

    .trending-card__eyebrow {
      font-size: 11px;
      letter-spacing: 0.22em;
      text-transform: uppercase;
      margin: 0 0 12px;
      color: #8b8b8b;
    }

    .trending-card__heading {
      margin: 0 0 22px;
      font-size: 18px;
      line-height: 1.4;
      letter-spacing: 0.11em;
      text-transform: uppercase;
      font-weight: 600;
    }

    .trending-card__button {
      display: inline-block;
      font-size: 12px;
      letter-spacing: 0.24em;
      text-transform: uppercase;
      text-decoration: none;
      color: #111111;
      border-bottom: 1px solid #111111;
      padding-bottom: 4px;
    }

    .trending-card__button:hover {
      opacity: 0.7;
    }
  </style>
</section>

{% schema %}
{
  "name": "Trending feature row",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "eyebrow",
          "label": "Eyebrow text",
          "default": "NOW TRENDING"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "BECOME A CERTIFIED PERSONAL TRAINER"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "SHOP NOW"
        },
        {
          "type": "checkbox",
          "id": "button_new_tab",
          "label": "Open in new tab",
          "default": false
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Trending feature row",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
