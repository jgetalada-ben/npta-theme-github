{% schema %}
{
  "name": "Text Image",
  "settings": [
    { "type": "text", "id": "section_id", "label": "Section ID", "default": "section-id" },

    { "type": "text", "id": "heading", "label": "Heading", "default": "Lorem ipsum dolor sit amet" },
    { "type": "color", "id": "heading_color", "label": "Heading color", "default": "#01241E" },
    { "type": "richtext", "id": "description", "label": "Text" },
    { "type": "color", "id": "text_color",    "label": "Text Color", "default": "#01241E" },

    { "type": "image_picker", "id": "image", "label": "Select an image" },

    { "type": "checkbox", "id": "show_buttons", "label": "Show Button", "default": true },
    { "type": "text", "id": "primary_button_text", "label": "Primary Button Text", "default": "Button" },
    { "type": "url",  "id": "primary_button_link", "label": "Primary Button Link" },

    { "type": "color", "id": "primary_button_color", "label": "Primary button color", "default": "#e9f24f" },

    { "type": "header", "content": "Layout" },
    { "type": "select", "id": "layout", "label": "Desktop order", "options": [
      { "value": "content-left", "label": "Content left, image right" },
      { "value": "image-left",   "label": "Image left, content right" }
    ], "default": "content-left" },

    { "type": "header", "content": "Container width" },
    { "type": "text", "id": "max_width", "label": "Max width (e.g. 1989px or 90%)", "default": "1989px" },

    { "type": "header", "content": "Spacing & background" },
    { "type": "range", "id": "pad_y", "min": 0, "max": 200, "step": 2, "unit": "px", "label": "Padding top & bottom", "default": 120 },
    { "type": "range", "id": "pad_x", "min": 0, "max": 200, "step": 2, "unit": "px", "label": "Padding left & right", "default": 80 },
    { "type": "color", "id": "bg", "label": "Background color", "default": "#ffffff" }
  ],
  "blocks": [
    {
      "type": "highlight",
      "name": "Highlight",
      "settings": [
        { "type": "text", "id": "highlight_title", "label": "Highlight Title", "default": "Highlight Title Goes Here" },
        { "type": "textarea", "id": "highlight_description", "label": "Highlight Description", "default": "Short description goes here." }
      ]
    }
  ],
  "presets": [
    { "name": "Text Image", "category": "Custom Sections" }
  ]
}
{% endschema %}

{%- assign sid = section.settings.section_id | strip | handleize -%}
{%- if sid == blank -%}{% assign sid = 'section-' | append: section.id %}{%- endif -%}

{%- assign mw = section.settings.max_width | default: '1989px' | strip -%}
{%- unless mw contains 'px' or mw contains '%' or mw contains 'vw' or mw contains 'rem' -%}
  {% assign mw = mw | append: 'px' %}
{%- endunless -%}

<section
  id="{{ sid }}"
  class="section--text-image {{ section.settings.layout }}"
  style="
    --py: {{ section.settings.pad_y | default: 120 }}px;
    --px: {{ section.settings.pad_x | default: 80 }}px;
    --bg: {{ section.settings.bg | default: '#ffffff' }};
    --btn-bg: {{ section.settings.primary_button_color | default: '#e9f24f' }};
    --hdg: {{ section.settings.heading_color | default: '#01241E' }};
    --txt: {{ section.settings.text_color   | default: '#01241E' }};
  "
>
  <div class="text-image--container" style="max-width: {{ mw }}; width: 100%; margin: 0 auto;">
    <div class="text-image--content">
      <div class="text-image--column-left">
        <div class="section--title-block">
          <h2 class="is--flex-start">{{ section.settings.heading }}</h2>
        </div>

        <div class="text-image--description">
          {{ section.settings.description }}
        </div>

        {% if section.settings.show_buttons %}
          <div class="section--hero-buttons">
            <a href="{{ section.settings.primary_button_link }}" class="btn button-yg">
              <span class="btn-label-down">{{ section.settings.primary_button_text }}</span>
              <span class="btn-label-down">{{ section.settings.primary_button_text }}</span>
            </a>
          </div>
        {% endif %}
      </div>

      <div class="text-image--column-right">
        <div class="image-wrapper">
          {% if section.settings.image %}
            <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.heading | escape }}">
          {% else %}
            <p>No image available</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

