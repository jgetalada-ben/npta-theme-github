#{{ sid }}.section--text-image h2{
  color: var(--hdg, #01241E);
  font-family: var(--font-anton);
  font-weight:400;
  font-size: clamp(32px,4.3vw,64px);
  margin-bottom:7px;
  margin-top:0;
}

#{{ sid }}.section--text-image p{
  color: #141414;
  font-family: var(--font-poppins500);
  font-size: clamp(16px,2.2vw,24px);
  line-height: normal;
  font-weight: 400;
}

#{{ sid }}.section--text-image{
  background: var(--bg);
  padding: var(--py) var(--px);
  display: flex; justify-content: center; align-items: center;
}
@media (max-width: 980px){
  #{{ sid }}.section--text-image{ padding: calc(var(--py)/2) calc(var(--px)/2); }
