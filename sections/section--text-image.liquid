@media (max-width: 980px){
  #{{ sid }} .text-image--content{ display:flex !important; flex-wrap:wrap; flex-direction: column-reverse; gap:30px; }
  #{{ sid }} .text-image--column-left{ width:100%; max-width:100%; }
  #{{ sid }} .text-image--column-right .image-wrapper{
    min-height: 280px;
  }
}

#{{ sid }}.section--text-image .button-yg{
  background: var(--btn-bg) !important;
  border-color: var(--btn-bg) !important;
  color: #0B0B0B !important;
}
#{{ sid }} .text-image--container{ width:100%; }
