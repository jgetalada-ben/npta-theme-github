  .text-image--content{ 
    display:grid; 
    grid-template-columns: 1fr 1fr; 
    align-items:stretch; 
    gap: 0; }
  #{{ sid }}.section--text-image.image-left .text-image--column-left{ order: 2; }  /* move content to right */
  #{{ sid }}.section--text-image.image-left .text-image--column-right{ order: 1; } /* image to left */
