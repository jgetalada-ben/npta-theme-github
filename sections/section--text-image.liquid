  width:100%; 
  height:100%; 
  border-radius:0; 
  overflow:hidden; 
  object-fit: cover;
  display: block;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const highlights = document.querySelectorAll('.text-image--highlight');

  if (highlights.length > 0) {
    const firstHighlight = highlights[0];
    firstHighlight.classList.add('active');
    const content = firstHighlight.querySelector('p');
    content.style.maxHeight = content.scrollHeight + 'px';
  }

  highlights.forEach(highlight => {
    highlight.addEventListener('click', () => {
      highlights.forEach(h => {
        h.classList.remove('active');
        h.querySelector('p').style.maxHeight = '0';
      });

      highlight.classList.add('active');
      const content = highlight.querySelector('p');
      content.style.maxHeight = content.scrollHeight + 'px';
    });
  });
});

</script>
