<script>
document.addEventListener('DOMContentLoaded', function() {
  let allWords = $(".home-hero__word");
  let wordContainer = $(".home-hero__words");
  let currentIndex = 0;
  let delay = 100; // Delay for letter animations
  let extraStay = 1000; // Extra 1 second for the word to stay visible
  let isMobile = window.matchMedia("(max-width: 768px)").matches;
  let interval;

  function updateIsMobile() {
    isMobile = window.matchMedia("(max-width: 768px)").matches;
  }

  function splitWordToLetters(word) {
    return word.split("").map(letter => {
      if (letter === " ") {
        return `<em class="home-hero__letter space">&nbsp;</em>`;
      } else {
        return `<em class="home-hero__letter">${letter}</em>`;
      }
    }).join("");
  }

  function showWord(index) {
    let word = allWords.eq(index).text();
    if (isMobile) {
      wordContainer.html(`<span class="home-hero__word-animate">${word}</span>`);
    } else {
      wordContainer.html(splitWordToLetters(word));
    }
  }

  function animateLettersIn() {
    let letters = $(".home-hero__letter");
    letters.each(function(index) {
      setTimeout(() => {
        $(this).addClass("active");
      }, index * delay);
    });
  }

  function animateWordsIn() {
    let wordElement = $(".home-hero__word-animate");
    wordElement.addClass("active");
  }

  function animateLettersOut(callback) {
    let letters = $(".home-hero__letter");
    let totalDuration = letters.length * delay; // Duration of exit animations
    letters.each(function(index) {
      setTimeout(() => {
        $(this).removeClass("active").addClass("exit");
      }, index * delay);
    });
    setTimeout(callback, totalDuration);
  }

  function animateWordsOut(callback) {
    let wordElement = $(".home-hero__word-animate");
    wordElement.removeClass("active").addClass("exit");
    setTimeout(callback, 800); // Adjust based on your exit animation duration
  }

  function startAnimation() {
    clearInterval(interval);
    showWord(currentIndex);

    if (isMobile) {
      animateWordsIn();
      interval = setInterval(function() {
        animateWordsOut(function() {
          currentIndex = (currentIndex + 1) % allWords.length;
          showWord(currentIndex);
          animateWordsIn();
        });
      }, 3000 + extraStay); // Interval includes the extra stay duration
    } else {
      animateLettersIn();
      interval = setInterval(function() {
        animateLettersOut(function() {
          currentIndex = (currentIndex + 1) % allWords.length;
          showWord(currentIndex);
          animateLettersIn();
        });
      }, 3000 + extraStay); // Interval includes the extra stay duration
    }
  }

  startAnimation();

  window.addEventListener("resize", function() {
    updateIsMobile();
    startAnimation();
  });
});
</script>


