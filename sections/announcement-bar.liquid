      </svg>
    </button>
  </div>

  {% stylesheet %}
  #AnnouncementBar-{{ section.id }} { background: var(--ann-bg); color: var(--ann-color); padding:12px 0; overflow:hidden; transition: height .4s ease, padding .4s ease, opacity .4s ease; height:auto;}
  #AnnouncementBar-{{ section.id }}.is-hidden { height:0; padding:0; opacity:0; }
  #AnnouncementBar-{{ section.id }} .announcement-bar--container { display:flex; justify-content:center; align-items:center; gap:10px; position:relative; padding-right:28px;}
  #AnnouncementBar-{{ section.id }} .announcement-icon { font-size:18px; line-height:1; }
  #AnnouncementBar-{{ section.id }} .announcement-rotator { position:relative; min-height:1em; }
  #AnnouncementBar-{{ section.id }} .announcement {
    margin:0; padding:0; position:absolute; inset:0 auto auto 0; opacity:0; pointer-events:none; transform:translateY(6px);
    transition:opacity 300ms ease, transform 300ms ease; text-align:center;
    font-family:'Anton', var(--font-heading-family, var(--font-body-family)); font-weight:400; font-style:normal;
    font-size:var(--ann-size); line-height:100%; letter-spacing:0; color:var(--ann-color); white-space:nowrap;
  }
  #AnnouncementBar-{{ section.id }} .announcement.is-active { opacity:1; pointer-events:auto; transform:translateY(0); position:relative; }
  #AnnouncementBar-{{ section.id }} .announcement a { color:var(--ann-color); text-decoration:underline; }
  #AnnouncementBar-{{ section.id }} .announcement-bar--close { background:none; border:0; cursor:pointer; position:absolute; right:0; top:50%; transform:translateY(-50%); padding:0; line-height:0; }
  #AnnouncementBar-{{ section.id }} .announcement-bar--close svg { width:16px; height:16px; }
  @media (max-width:640px){ #AnnouncementBar-{{ section.id }} .announcement { font-size:calc(var(--ann-size) - 2px); white-space:normal; } }
  @media (prefers-reduced-motion: reduce){ #AnnouncementBar-{{ section.id }} .announcement { transition:none; } }
  {% endstylesheet %}

  {% javascript %}
  (function(){
    var root = document.getElementById('AnnouncementBar-{{ section.id }}');
    if (!root) return;

    var closeBtn = root.querySelector('.announcement-bar--close');
    if (closeBtn){
      closeBtn.addEventListener('click', function(){
        root.style.height = root.scrollHeight + 'px';
        root.offsetHeight;
        root.classList.add('is-hidden');
        root.addEventListener('transitionend', function onEnd(){
          root.removeEventListener('transitionend', onEnd);
          if (root.classList.contains('is-hidden')) root.style.height = 'auto';
        });
      });
    }

    var items = root.querySelectorAll('.announcement-rotator .announcement');
    if (items.length <= 1) return;

    var prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    var index = 0;
    var interval = parseInt(getComputedStyle(root).getPropertyValue('--ann-speed')) || 5000;
    var timer;

    function show(i){ items.forEach(function(el,k){ el.classList.toggle('is-active', k===i); }); }
    function next(){ index = (index + 1) % items.length; show(index); }

    show(index);
    if (!prefersReduced){
      timer = setInterval(next, interval);
      root.addEventListener('mouseenter', function(){ clearInterval(timer); });
      root.addEventListener('mouseleave', function(){ timer = setInterval(next, interval); });
    }
  })();
  {% endjavascript %}
</section>

{% schema %}
{
  "name": "Announcement (rotating)",
  "tag": "section",
  "class": "section--announcement-bar",
  "max_blocks": 4,
  "settings": [
    { "type": "checkbox", "id": "show_icon", "label": "Show ðŸŽ‰ icon", "default": true },
    { "type": "color", "id": "bg_color", "label": "Background color", "default": "#C8FF63" },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#000000" },
    { "type": "range", "id": "font_size", "label": "Font size", "min": 12, "max": 28, "step": 1, "unit": "px", "default": 20 },
    { "type": "range", "id": "rotation_ms", "label": "Rotation speed", "min": 2000, "max": 9000,  "step": 500, "unit": "ms", "default": 5000 }
  ],
  "blocks": [
    {
      "type": "message",
      "name": "Announcement",
      "settings": [
        { "type": "text", "id": "text", "label": "Text", "default": "FLASH SALE! BUY MORE, SAVE MORE!" },
        { "type": "text", "id": "link_label", "label": "Link label", "default": "Shop now" },
        { "type": "url", "id": "link_url", "label": "Link URL" }
      ]
    }
  ],
  "presets": [{ "name": "Announcement (rotating)" }]
}
{% endschema %}

