{% comment %}
  sections/announcement-bar.liquid
  - Multi-message announcement bar with fade transition
  - Up to 4 announcements (blocks)
  - Customizable background & text colors + rotation speed
{% endcomment %}

<section id="AnnouncementBar-{{ section.id }}"
  class="section--announcement-bar"
  style="--ann-bg: {{ section.settings.bg_color | default: '#C8FF63' }}; --ann-color: {{ section.settings.text_color | default: '#000000' }}; --ann-size: {{ section.settings.font_size | default: 20 }}px; --ann-speed: {{ section.settings.rotation_ms | default: 5000 }}ms;">
  <div class="announcement-bar--container page-container">
    {% if section.settings.show_icon %}
      <span class="announcement-icon" aria-hidden="true">ðŸŽ‰</span>
    {% endif %}

    <div class="announcement-rotator" role="region" aria-live="polite">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% if block.type == 'message' %}
            <p class="announcement{% if forloop.first %} is-active{% endif %}" {{ block.shopify_attributes }}>
              {{ block.settings.text | escape }}
              {% if block.settings.link_label != blank and block.settings.link_url != blank %}
                <a href="{{ block.settings.link_url }}">{{ block.settings.link_label }}</a>
              {% endif %}
            </p>
          {% endif %}
        {% endfor %}
      {% else %}
        <p class="announcement is-active">
          Flash sale! <strong>Buy more, save more.</strong>
          <a href="/collections/all">Shop now</a>
        </p>
      {% endif %}
    </div>

    <button class="announcement-bar--close" aria-label="Close announcement bar">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
