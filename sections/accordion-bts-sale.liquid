.accordion-four--highlights{
  margin-bottom:30px;
}
.accordion-four--highlight h3{
  color:  #fff;
text-align: left;
    font-family: var(--font-heading-family);
font-size: 22px;
font-style: normal;
font-weight: 800;
line-height: 104%; /* 22.88px */
text-transform: uppercase;
    margin-bottom: 0 ;
}

