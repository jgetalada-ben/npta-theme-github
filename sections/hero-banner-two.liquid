<style>
  .home-hero__words {
    margin-bottom: -10px;
  }

  .home-hero__words em {
    font-style: normal !important;
  }

  .home-hero__letter,
  .home-hero__word-animate {
    display: inline-block;
    transform: translateY(120%);
    opacity: 0;
    transition: transform 0.8s ease, opacity 0.8s ease;
  }

  .home-hero__letter.active,
  .home-hero__word-animate.active {
    transform: translateY(0);
    opacity: 1;
  }

  .home-hero__letter.exit,
  .home-hero__word-animate.exit {
    transform: translateY(-120%);
    opacity: 0;
  }

  .home-hero__letter.space {
    width: 0.5em;
  }

  .home-hero_heading-wrapper {
    position: relative;
  }

  .home-hero__words {
    display: inline-block;
    overflow: hidden;
    position: relative;
    opacity: 1;
    transition: opacity 0.8s ease;
  }

  .home-hero__words-container {
    display: none;
  }

  .home-hero_heading-wrapper h1 {
    margin-top: 0;
    margin-bottom: 0;
    color: var(--white, #FFF);
    font-family: Montserrat;
    font-size: 62px;
    font-style: normal;
    font-weight: 800;
    line-height: 104%;
    text-transform: uppercase;
  }

  .home-hero_heading {
    text-transform: uppercase;
    overflow: hidden;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .home-hero_heading-wrapper h1 {
      font-size: 42px;
    }

    .home-hero__words {
      transition: opacity 0.8s ease;
    }
  }
</style>


