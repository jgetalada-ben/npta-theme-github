<script>

  
  // Helper to get URL parameter by name
  function getUrlParam(param) {
    return new URLSearchParams(window.location.search).get(param);
  }

  document.addEventListener('DOMContentLoaded', function () {
    const utmMedium = getUrlParam('utm_medium');
    const container = document.getElementById('iframe-popup-container');
    const closeBtn = document.getElementById('popup-close-btn');
    const popupContent = document.getElementById('iframe-popup-content');

    // Only show popup for ?utm_medium=ad
    if (utmMedium === 'ad' && container) {
      setTimeout(function() {
        container.style.display = 'flex';
      }, 1000);
    }

    // Close by button
    if (closeBtn && container) {
      closeBtn.addEventListener('click', function (e) {
        e.stopPropagation();
        container.style.display = 'none';
      });
    }

    // Close by overlay click
    if (container && popupContent) {
      container.addEventListener('click', function (e) {
        if (!popupContent.contains(e.target)) {
          container.style.display = 'none';
        }
      });
    }
  });
</script>

